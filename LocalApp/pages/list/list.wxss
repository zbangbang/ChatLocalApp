.scroll{
  display: flex;
  flex-direction: column;
  /* height: 1800rpx; */
  overflow: hidden;
  /* background: red; */
}

/* 搜索框 */
.search{
  display: flex;
  width: 710rpx;
  height: 60rpx;
  margin: 0 auto;
  /* padding-top: 10rpx; */
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  /* background: pink; */
}

.search input{
  flex: 9;
  height: 60rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
}

.search-img{
  flex: 1;
  width: 100%;
  height: 100%;
  /* background: pink; */
}

.search-img image{
  width: 50rpx;
  height: 50rpx;
  padding-top: 5rpx;
  padding-left: 5rpx;
}


/* 内容区域 */
.content{
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 100%;
  /* margin-left: 10rpx; */
  background: #fff;
}

.content-item{
  display: flex;
  width: 730rpx;
  height: 180rpx;
  /* background: yellow; */
  margin: 10rpx 10rpx 0 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.content-item image{
  width: 150rpx;
  height: 150rpx;
  margin: 5rpx 5rpx;
}

.content-item .detail{
  /* display: inline-block; */
  flex: 1;
  display: flex;
  flex-direction: column;
}

.content-item .detail text{
  /* flex: 1; */
  /* width: 450rpx; */
  margin: 2rpx 10rpx 0 10rpx;
  font-size: 30rpx;
  font-weight: 550;
}

.content-item .detail .detail-phone,
.content-item .detail .detail-address{
  font-size: 24rpx;
  font-weight: 400;
}

.content-item .item-right{
  width: 90rpx;
  /* background: red; */
}

.content-item .item-right .right-num{
  width: 80rpx;
  height: 40rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  color: #fff;
  background: rgb(223, 37, 37);
}

.bottom{
  width: 100%;
  height: 60rpx;
  /* background: #ddd; */
  text-align: center;
}

.bottom button{
  width: 100%;
  height: 60rpx;
  background: #f0f0f0;
  font-size: 28rpx;
  font-weight: normal;
}